<section id="todos" class="<%= list_class(@list) %>">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li>
        <form action="/lists/<%= @list_num %>/completeall" method="post">
          <button class="check" type="submit">Complete All</button>
        </form>
      </li>
      <li><a href="/lists/<%= @list_num %>/edit" class="edit">Edit List</a></li>
    </ul>
  </header>

  <ul>
    <% sort_todos(@list[:todos]) do |todo, idx| %>
      <li class="<%= todo_class(todo) %>">
        <form action="/lists/<%= @list_num %>/todos/<%= idx %>" method="post" class="check">
          <input type="hidden" name="completed" value="<%= !todo[:completed] %>" />
          <button type="submit">Complete</button>
        </form>
  
        <h3><%= todo[:name] %></h3>
        <form action="/lists/<%= @list_num %>/todos/<%= idx %>/delete" method="post" class="delete">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% end %>
</ul>
</section>

<form action="/lists/<%= @list_num %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" id="todo" placeholder="Something to do" type="text" value="<%= params[:todo] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>

<% content_for :header_links do %>
  <a class="list" href="/lists">All Lists</a>
<% end %>
